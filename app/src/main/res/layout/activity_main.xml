<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="253dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UTSA Brokers!"
        android:padding="20dp" />

    <Button
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:id="@+id/first_location"
        android:padding="20dp"
        android:text="@string/first_property_button" />

    <Button
        android:id="@+id/second_location"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:padding="20dp"
        android:text="@string/second_property_button" />

    <Button
        android:id="@+id/third_location"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:padding="20dp"
        android:text="@string/third_property_button" />

    <Button
        android:id="@+id/fourth_location"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:padding="20dp"
        android:text="@string/fourth_property_button" />


</LinearLayout>